{
    "compilerOptions": {

        "target": "es2021",
        "module": "commonjs",

        "outDir": "./lib",
        "rootDir": "./src",
        
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        
        "types": ["node"],

        "baseUrl": ".",
        "paths": {
            "@utils": ["src/utils"],
            "@config": ["src/config"]
        }
    },

    "include": ["src", "**/*.ts"],
    "exclude": ["build", "node_modules", "tests"],

    "ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}