{
    "compilerOptions": {

        "target": "es2021",
        "module": "commonjs",

        "outDir": "./lib",
        "rootDir": ".",
        
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        
        "types": ["node"],

        "baseUrl": ".",
        "paths": {
            "@utils": ["src/utils"],
            "@config": ["src/config"]
        }
    },

    "include": ["src", "**/*.ts"],
    "exclude": ["build", "node_modules", "tests"],
    "paths": ["node_modules/*", "src/types/*"],

    "ts-node": {
		"require": ["tsconfig-paths/register"],
        "files": true
	}
}