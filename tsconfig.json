{
    "compilerOptions": {

        "target": "es2021",
        "module": "commonjs",

        "outDir": "./lib",
        "rootDir": "./src",
        
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowJs": true,
        
        "types": ["node"],

        "baseUrl": ".",
        "paths": {
            "@utils": ["src/utils"],
            "@config": ["src/config"],
            "@middlewares": ["src/middlewares"]
        }
    },

    "include": ["src", "**/*.ts"],
    "exclude": ["lib", "node_modules"],
    "paths": ["node_modules/*", "src/types/*"],

    "ts-node": {
		"require": ["tsconfig-paths/register"],
        "files": true
	}
}