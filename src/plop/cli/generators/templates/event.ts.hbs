import { ArgsOf, Client } from 'discordx'

import { On, Discord } from '@decorators'

@Discord()
export default class {{pascalCase name}}Event {

    {{#if customEvent}}
    // =============================
    // ========= Handlers ==========
    // =============================

    {{/if}}
    @On('{{camelCase name}}')
    async {{camelCase name}}Handler(
        [arg]: {{#if customEvent}}any{{else}}ArgsOf<'{{camelCase name}}'>{{/if}},
        client: Client
    ) {

       console.log('{{camelCase name}} event triggered!')
    }

    {{#if customEvent}}
    // =============================
    // ========== Emitter ==========
    // =============================

    @On('EMITTER_EVENT_HERE')
    async {{camelCase name}}Emitter(
        [arg]: any,
        client: Client
    ) {

       client.emit('{{camelCase name}}', arg, client)
    }
    {{/if}}
}